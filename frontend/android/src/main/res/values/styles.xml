<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="TwitterTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/twitter_blue</item>
    </style>

    <style name="GithubTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
